<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @paper.title %>
</p>

<p>
  <strong>Venue:</strong>
  <%= @paper.venue %>
</p>

<p>
  <strong>Year:</strong>
  <%= @paper.year %>
</p>

<% if @paper.authors.count != 0 %>
<p>
  <strong><%= "Author".pluralize(@paper.authors.count) %>:</strong><br/>
  <% @paper.authors.each do |author| %>
    <%= author.name %><br/>
  <% end %>
</p>
<% end %>


<%= link_to 'Edit', edit_paper_path(@paper) %> |
<%= link_to 'Back', papers_path %>
